# Soubor .kv obsahuje nastavení grafického rozhraní aplikace v Kivy
# Využívá specifický kivy language (https://kivy.org/doc/stable/guide/lang.html)

# Objekt míče
<PongBall>
    size: 16, 16
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

# Objekt pálky (hráče)
<PongPaddle>
    size: 20, 100
    canvas:
        Color:
            rgba: 1, 1, 1, .8
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        canvas.before:
            PushMatrix
            Rotate:
                angle: -90
                origin: root.pos
            Rectangle:
                pos: (root.x - 65, root.y)
                size: 30, 20
                source: 'images/flags/' + root.state + '.png'
        canvas.after:
            PopMatrix

# Objekt hry
<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:
        font_size : 20
        color: 1, 1, 0, 1
        center_x : root.width / 4
        top: root.top + 20
        text: root.player1.name + ' ('+ root.player1.state + ')'

    Label:
        font_name: 'Bungee'
        font_size : 50
        center_x : root.width / 4
        top: root.top - 30
        text: str(root.player1.score)

    Label:
        font_size : 20
        color: 1, 1, 0, 1
        center_x : root.width * 3 / 4
        top: root.top + 20
        text: root.player2.name + ' ('+ root.player2.state + ')'

    Label:
        font_name: 'Bungee'
        font_size : 50
        center_x : root.width * 3/4
        top: root.top - 30
        text: str(root.player2.score)

    Label:
        font_size : 30
        color: .8, 0, 0, .8
        center_x : root.width / 2
        top: root.top - 30
        text: root.get_time(root.time)
        canvas.before:
            Color:
                rgba: 0, 0, 0, .8
            Rectangle:
                pos: self.pos
                size: self.size

    PongBall:
        id: pong_ball
        center: self.parent.center

    PongPaddle:
        id: player_left
        x: root.x
        name: 'Left'
        center_y : root.center_y

    PongPaddle:
        id: player_right
        x: root.width - self.width
        name: 'Right'
        center_y : root.center_y

# Widget-obrazovka s menu
<MenuScreen>:
    id: menu
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            canvas.before:
                Color:
                    rgba: .3, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: 'images/ping-pong2.png'
            Label:
                font_name: 'Fredericka'
                font_size: 100
                color: 1, 0, 0, .8
                text: 'PONG!!!'

        BoxLayout:
            BoxLayout:
                orientation: 'vertical'
                padding: 30
                spacing: 3

                Label:
                    size_hint: 1, 1
                    font_name: 'Fredericka'
                    font_size: 30
                    text: 'PLAYERS'
                    canvas.before:
                        Color:
                            rgba: .5, 0, 0, .1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                BoxLayout:
                    size_hint: 1, 1
                    TextInput:
                        id: left_player_name
                        multiline: False
                        font_name: 'Fredericka'
                        font_size: 20
                        cursor_color: 1, 1, 0, 1
                        foreground_color: 1, 1, 0, 1
                        background_color: 0, 0, 0, 1
                        size_hint: .5, 1
                        text: 'Left'
                    Button:
                        id: left_player_flag
                        background_normal: f'images/flags/{root.STATES[root.left_index]}.png'
                        pos_hint: {'x': 0, 'y': .2}
                        size_hint: .15, .7
                        on_press:
                            root.left_index = root.left_index + 1 if root.left_index < len(root.STATES) - 1 else 0
                            self.background_normal = f'images/flags/{root.STATES[root.left_index]}.png'
                            root.ids.left_player_state.text = root.STATES[root.left_index]
                    Label:
                        id: left_player_state
                        font_name: 'Fredericka'
                        font_size: 20
                        size_hint: .2, 1
                        text: root.STATES[root.left_index]

                BoxLayout:
                    size_hint: 1, 1
                    TextInput:
                        id: right_player_name
                        multiline: False
                        font_name: 'Fredericka'
                        font_size: 20
                        cursor_color: 1, 1, 0, 1
                        foreground_color: 1, 1, 0, 1
                        background_color: 0, 0, 0, 1
                        size_hint: .5, 1
                        text: 'Right'
                    Button:
                        id: right_player_flag
                        background_normal: f'images/flags/{root.STATES[root.right_index]}.png'
                        pos_hint: {'x': 0, 'y': .2}
                        size_hint: .15, .7
                        on_press:
                            root.right_index = root.right_index + 1 if root.right_index < len(root.STATES) - 1 else 0
                            self.background_normal = f'images/flags/{root.STATES[root.right_index]}.png'
                            root.ids.right_player_state.text = root.STATES[root.right_index]
                    Label:
                        id: right_player_state
                        font_name: 'Fredericka'
                        font_size: 20
                        size_hint: .2, 1
                        text: root.STATES[root.right_index]

                Button:
                    font_name: 'Fredericka'
                    font_size: 30
                    color: .8, 0, 0, 1
                    background_color: .4, 0, 0, 1
                    text: 'Start'
                    on_press:
                        root.manager.current = 'canvas'

            BoxLayout:
                orientation: 'vertical'
                padding: 30
                spacing: 3

                Label:
                    size_hint: 1, 1
                    font_size: 30
                    font_name: 'Fredericka'
                    text: 'OPTIONS'
                    canvas.before:
                        Color:
                            rgba: .5, 0, 0, .1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                BoxLayout:
                    size_hint: 1, 1
                    padding: 10
                    Label:
                        size_hint: 0.1, 1
                        text: 'AI'
                    Switch:
                        id: left_player_ai
                    Label:
                        size_hint: 0.3, 1
                        text: 'Time'
                    BoxLayout:
                        Slider:
                            id: time_slider
                            min: .5
                            max: 5
                            step: .5
                        Label:
                            size_hint: 0.1, 1
                            text: str(time_slider.value)

                BoxLayout:
                    size_hint: 1, 1
                    padding: 10
                    Label:
                        size_hint: 0.1, 1
                        text: 'AI'
                    Switch:
                        id: right_player_ai
                    Label:
                        size_hint: 0.3, 1
                        text: 'Speed'
                    BoxLayout:
                        Slider:
                            id: speed_slider
                            min: 1
                            max: 10
                            value: 3
                            step: 1
                        Label:
                            size_hint: 0.1, 1
                            text: str(speed_slider.value)

                Button:
                    font_name: 'Fredericka'
                    font_size: 30
                    color: .8, 0, 0, 1
                    background_color: .4, 0, 0, 1
                    text: 'Quit'
                    on_press: app.stop()

# Widget-obrazovka pro zobrazení canvasu
<CanvasScreen>:
    on_enter:
        root.start_game()
        root.game.ids.player_left.name = root.manager.screens[0].ids.left_player_name.text
        root.game.ids.player_right.name = root.manager.screens[0].ids.right_player_name.text
        root.game.ids.player_left.state = root.manager.screens[0].ids.left_player_state.text
        root.game.ids.player_right.state = root.manager.screens[0].ids.right_player_state.text
        root.game.ids.player_left.ai = root.manager.screens[0].ids.left_player_ai.active
        root.game.ids.player_right.ai = root.manager.screens[0].ids.right_player_ai.active
        root.game.ids.player_left.speed = root.manager.screens[0].ids.speed_slider.value * 2
        root.game.ids.player_right.speed = root.manager.screens[0].ids.speed_slider.value * 2
        root.game.ids.pong_ball.speed = root.manager.screens[0].ids.speed_slider.value * 3
        root.game.ids.pong_ball.max_speed = root.manager.screens[0].ids.speed_slider.value * 5
        root.game.ids.pong_ball.min_speed = root.manager.screens[0].ids.speed_slider.value * 3
        root.game.end_time = root.manager.screens[0].ids.time_slider.value * 3600

    on_leave:
        root.clear_widgets()

